@model VynilShop.Domain.DomainModels.Order

<div class="container">

    <p>
       Order made by: @Model.User.UserName
    </p>

    @for (int i = 0; i < Model.VynilInOrders.Count(); i++)
    {
        var item = Model.VynilInOrders.ElementAt(i).OrderedVynil;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" style="height: 70%" src="@item.VynilImage" alt="Card image cap">
                    <div class="card-body">
                        <h3>@item.VynilName</h3>
                        <h3>@item.VynilDate</h3>
                        <h3>@item.VynilPrice</h3>
                        <p>@item.VynilDescription</p>
                    </div>

                </div>
            </div> if (i % 3 == 2)
            {
            @:</div>
        }

    }
</div>